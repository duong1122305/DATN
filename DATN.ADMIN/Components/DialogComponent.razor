<MudDialog Style="width:600px; height:650px" CloseOnEscape="false">
    <DialogContent>
        <MudForm @bind-IsValid="@success">
            <MudTextField T="string" Label="Họ tên" Required="true" RequiredError="Vui lòng không để trống!" style="padding-bottom:20px"></MudTextField>
            <MudTextField T="string" Label="Email" Required="true" RequiredError="Vui lòng không để trống!" style="padding-bottom:20px"></MudTextField>
            <MudTextField T="string" Label="User" Required="true" RequiredError="Vui lòng không để trống!" style="padding-bottom:20px"></MudTextField>
            <MudTextField T="string" Label="Địa chỉ" Required="true" RequiredError="Vui lòng không để trống!" style="padding-bottom:20px"></MudTextField>
            <MudTextField T="string" Label="Số điện thoại" Required="true" RequiredError="Vui lòng không để trống!" style="padding-bottom:20px"></MudTextField>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" Color="Color.Error">Huỷ</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Done" >Xác nhận</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel(); 

    bool success = false;
}