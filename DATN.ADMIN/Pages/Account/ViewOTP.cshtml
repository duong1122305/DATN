@page "/OTP"
@using DATN.ADMIN.Pages.Account
@using Microsoft.AspNetCore.Components.Web
@namespace DATN.ADMIN.Pages
@model ViewOTPModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Quên mật khẩu?</title>
</head>
<body >
    <!-- Loader Start -->
    <div id="loading">
    </div>
    <!-- Loader End -->
    <div>
        <div class="container">
            <div class="row justify-content-center align-items-center vh-100">
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-body">
                            <div class="text-center">
                                <a href="/"><img src="img/logo_name.png" class="img-fluid h-4 mb-4" style="height: 150px; width: 150px;"></a>
                            </div>
                            <div>
                                <div class="my-4">Quên mật khẩu? Bạn hãy cố nhớ lại mật khẩu cũ của mình!.</div>
                                <form method="post">
                                    <input type="hidden">
                                    <!-- Email Address -->
                                  
                                    <div class="mt-2">
                                        <label class="form-label" for="email">Mã OTP</label>
                                        <div class="d-flex">
                                            <input class="form-control" id="code" type="text" name="code" maxlength="6">
                                        </div>
                                    </div>
                                  
                                    <div class="d-flex align-items-center justify-content-center mt-4">
                                        <button class="btn btn-info w-100 text-white" onclick="@Model.CheckOtp()">Xác nhận</button>
                                    </div>
                                </form>
                            </div>
                            <div class="text-center mt-3 d-none">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>