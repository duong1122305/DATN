@inherits LayoutComponentBase
@page "/profileUser"

<PageTitle>Hồ Sơ Người Dùng</PageTitle>

<div class="content-wrapper">
    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-12 row justify-content-center">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="d-flex justify-content-center align-items-center mb-3 mt-3"><h4><i class="fa fa-user"></i> Hồ sơ người dùng</h4></div>
                    </div>
                    <div class="row w-50 m-4 bg-light border rounded">
                        <div class="form-group col-md-6 mt-2" value="">
                            <label class="form-label" for="Tên">Tên</label>
                            <input type="text" class="form-control" id="Tên" placeholder="" readonly>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-6 mt-2" value="">
                            <label class="form-label" for="Họ">Họ</label>
                            <input type="text" class="form-control" id="Họ" placeholder="" readonly>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-6 mt-2" value="">
                            <label class="form-label" for="Email">Email <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Email" placeholder="" required>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-6 mt-2">
                            <label class="form-label">Số Điện Thoại Liên Hệ <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="phone" placeholder="0989123456" required>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="" class="form-label w-100 mt-2">Giới Tính</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="nam" value="nam">
                                <label class="form-check-label" for="nam"> Nam </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="nu" value="nu">
                                <label class="form-check-label" for="nu"> Nữ </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" id="other" value="other">
                                <label class="form-check-label" for="other"> Khác </label>
                            </div>
                            <p class="mb-0 text-danger"></p>
                        </div>
                        <div class="d-grid d-md-block setting-footer col-md-6">
                            <button class="btn btn-primary mt-4 mb-3 text-light btn-outline-success" name="submit"> Xác nhận thay đổi <i class="fa fa-save"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <form>
            <div class="row">
                <div class="col-12 row justify-content-center">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="d-flex justify-content-center align-items-center mb-3 mt-3"><h4><i class="fa fa-lock"></i>Thay đổi mật khẩu</h4></div>
                    </div>
                    <div class="row w-50 m-4 bg-light border rounded">
                        <div class="form-group col-md-12 mt-2" value="">
                            <label class="form-label" for="Tên">Mật khẩu cũ <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Tên" placeholder="" required>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-12" value="">
                            <label class="form-label" for="Họ">Mật khẩu mới <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Họ" placeholder="" required>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="form-group col-md-12" value="">
                            <label class="form-label" for="Email">Nhập lại mật khẩu mới <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Email" placeholder="" required>
                            <span class="text-danger"></span>
                            <ul class="m-0"></ul>
                        </div>
                        <div class="d-grid d-md-block setting-footer col-md-6 mb-3">
                            <button class="btn btn-primary text-light btn-outline-success" name="submit"> Xác nhận thay đổi <i class="fa fa-save"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
